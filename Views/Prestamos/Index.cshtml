@model List<Monetix.Models.Prestamo>
@using Monetix.Models
@{
    ViewData["Title"] = "Gestión de Préstamos";
    int top = ViewBag.Top ?? 10;
    string busqueda = ViewBag.Busqueda as string ?? "";
    string estado = ViewBag.EstadoFiltro as string ?? "";
    var clientes = ViewBag.Clientes as List<Cliente>;
    var tipoPlazo = ViewBag.TipoPlazo as List<SelectListItem>;
    var mensaje = ViewBag.Mensaje as string;
    int contador = 1;
    var culture = new System.Globalization.CultureInfo("es-CO");
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary fw-bold">
            <i class="bi bi-journal-text me-2"></i> Lista de Préstamos
        </h3>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row gy-2 gx-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Buscar por nombre del cliente:</label>
                    <input type="text" name="busqueda" value="@busqueda" class="form-control" placeholder="Ej: Juan Pérez" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Top:</label>
                    <input type="number" name="top" value="@top" min="1" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Estado:</label>
                    <select name="estado" class="form-select">
                        @{
                            var opciones = new[] { "Todos", "Pendiente", "Pagado" };
                            foreach (var opcion in opciones)
                            {
                                var valor = opcion == "Todos" ? "" : opcion;
                                var selected = (estado == valor) ? "selected" : "";
                                @:<option value="@valor" @selected>@opcion</option>
                            }
                        }
                    </select>
                </div>
             <div class="col-md-3">
                <div class="d-flex justify-content-end gap-2 flex-wrap">
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a href="@Url.Action("Index", "Prestamos")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-clockwise"></i> Recargar
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#crearModal">
                        <i class="bi bi-plus-circle me-1"></i> Nuevo Préstamo
                    </button>
                </div>
             </div>
            </form>
        </div>
    </div>

    @if (ViewBag.MensajeError != null)
    {
        <div class="alert alert-danger shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.MensajeError
        </div>
    }
    @if (ViewBag.MensajeExito != null)
    {
        <div class="alert alert-success shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>@ViewBag.MensajeExito
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th> </th>
                    <th>Nro. Prestamo </th>
                    <th>Cliente</th>
                    <th>Monto</th>
                    <th>Cuotas</th>
                    <th>Inicio</th>
                    <th>Vencimiento</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@contador</td>
                        <td>@item.IdPrestamo</td>
                        <td>
                            @if (item.Cliente != null)
                            {
                                @(item.Cliente.PrimerNom + " " + item.Cliente.SegundoNom + " " + item.Cliente.PrimerApe + " " + item.Cliente.SegundoApe)
                            }
                            else
                            {
                                <span class="text-danger">Sin cliente</span>
                            }
                        </td>
                        <td>@item.Cantidad?.ToString("C0", culture)</td>
                        <td>@item.NumCuotas</td>
                        <td>@item.FechaPrestamo?.ToString("yyyy-MM-dd")</td>
                        <td>@item.FechaVencimiento?.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (item.Estado == true)
                            {
                                <!-- Pendiente -->
                                <span class="badge bg-warning text-dark">
                                    <i class="bi bi-hourglass-split"></i> Pendiente
                                </span>
                            }
                            else
                            {
                                <!-- Pagado -->
                                <span class="badge bg-success">
                                    <i class="bi bi-cash-stack"></i> Pagado
                                </span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                @if (item.Estado == true)
                                {
                                    <!-- Ampliar plazo -->
                                    <button class="btn btn-sm btn-outline-warning" title="Ampliar Plazo"
                                            onclick="ampliarPlazo(@item.IdPrestamo)">
                                        <i class="bi bi-arrow-clockwise"></i>
                                    </button>

                                    <!-- Desactivar -->
                                    <form asp-action="Desactivar" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.IdPrestamo" />
                                        <button type="submit" class="btn btn-sm btn-danger" title="Desactivar"
                                                onclick="return confirm('¿Está seguro de desactivar este préstamo?')">
                                            <i class="bi bi-x-circle-fill"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <!-- Activar -->
                                    <form asp-action="Activar" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item.IdPrestamo" />
                                        <button type="submit" class="btn btn-sm btn-success" title="Activar">
                                            <i class="bi bi-check-circle-fill"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                    contador++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Crear Préstamo -->
<div class="modal fade" id="crearModal" tabindex="-1" aria-labelledby="crearModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content shadow-lg border-0">
            <form asp-action="Create" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i> Nuevo Préstamo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cliente</label>
                            <select name="idCliente" class="form-select" required>
                                <option selected disabled value="">Seleccione...</option>
                                @foreach (var c in clientes)
                                {
                                    <option value="@c.IdCliente">@($"{c.PrimerNom} {c.SegundoNom} {c.PrimerApe} {c.SegundoApe}".Trim())</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Cantidad</label>
                            <input type="number" name="cantidad" class="form-control" step="1" min="1" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Fecha Vencimiento</label>
                            <input disabled type="date" name="fechaVencimiento" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tipo de Plazo</label>
                            <select name="numCuotas" class="form-select" required>
                                <option value="30">Diario</option>
                                <option value="1">Mensual</option>
                                <option value="2">Mensual - Bimensual</option>
                                <option value="3">Mensual - Trimestral</option>
                                <option value="4">Meses - Cuatro meses</option>
                                <option value="5">Meses - Cinco meses</option>
                                <option value="6">Semestral</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Ampliar Plazo -->
<div class="modal fade" id="modalAmpliar" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow-lg">
            <form id="formAmpliar" asp-action="AmpliarPlazo" method="post">
                <!-- Este debe llamarse igual que el parámetro 'idPrestamo' -->
                <input type="hidden" name="idPrestamo" id="inputIdPrestamo" />
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title">
                        <i class="bi bi-arrow-clockwise me-2"></i> Ampliar Plazo
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <label class="form-label">Días a ampliar:</label>
                    <!-- Este debe coincidir con 'diasAmpliar' -->
                    <input type="number" name="diasAmpliar" class="form-control" min="1" required />
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button class="btn btn-warning" type="submit">
                        <i class="bi bi-check2-circle"></i> Confirmar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function ampliarPlazo(id) {
            document.getElementById("inputIdPrestamo").value = id;
            new bootstrap.Modal(document.getElementById('modalAmpliar')).show();
        }

        document.addEventListener("DOMContentLoaded", function () {
            const plazoSelect = document.querySelector("select[name='numCuotas']");
            const fechaVencimientoInput = document.querySelector("input[name='fechaVencimiento']");

            plazoSelect.addEventListener("change", function () {
                const cuotas = parseInt(plazoSelect.value);

                if (!isNaN(cuotas)) {
                    const hoy = new Date();
                    let nuevaFecha = new Date(hoy);

                    // Si es plazo diario (30), sumamos días en lugar de meses
                    if (cuotas === 30) {
                        nuevaFecha.setDate(nuevaFecha.getDate() + cuotas);
                    } else {
                        nuevaFecha.setMonth(nuevaFecha.getMonth() + cuotas);
                    }

                    // Convertimos a yyyy-MM-dd
                    const yyyy = nuevaFecha.getFullYear();
                    const mm = String(nuevaFecha.getMonth() + 1).padStart(2, '0');
                    const dd = String(nuevaFecha.getDate()).padStart(2, '0');
                    const fechaFormateada = `${yyyy}-${mm}-${dd}`;

                    fechaVencimientoInput.value = fechaFormateada;
                }
            });
        });
    </script>
}
