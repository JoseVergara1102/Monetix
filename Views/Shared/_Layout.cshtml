@{
    var usuario = Context.Session.GetString("usuario");
    var mostrarHeaderFooter = !(ViewData["OcultarHeaderFooter"] as bool? ?? false);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monetix</title>

    <!-- Bootstrap CSS & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Monetix.styles.css" asp-append-version="true" />

    <style>
        :root {
            --footer-height: 70px;
        }

        body {
            padding-bottom: var(--footer-height);
        }

        footer.footer {
            background-color: #343a40;
            color: #ddd;
            padding: 0.6rem 0;
            position: fixed;
            bottom: 0;
            width: 100%;
            height: var(--footer-height);
            z-index: 1000;
        }

            footer.footer a {
                color: #f0db4f;
                text-decoration: none;
            }

                footer.footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body class="bg-light">

    @if (mostrarHeaderFooter)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
                <div class="container-fluid">

                    <div class="collapse navbar-collapse justify-content-between" id="navbarContent">
                        <!-- Menú de módulos -->
                        <ul class="navbar-nav mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="modulosDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-grid-3x3-gap-fill me-1"></i> 
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark shadow-lg animate__animated animate__fadeIn" aria-labelledby="modulosDropdown">
                                    <li><a class="dropdown-item" asp-controller="Bancos" asp-action="Index"><i class="bi bi-bank me-2 text-primary"></i>Bancos</a></li>
                                    <li><a class="dropdown-item" asp-controller="CuentasBancarias" asp-action="Index"><i class="bi bi-credit-card-2-front me-2 text-info"></i>Cuentas</a></li>
                                    <li><a class="dropdown-item" asp-controller="Prestamos" asp-action="Index"><i class="bi bi-cash-stack me-2 text-success"></i>Préstamos</a></li>
                                    <li><a class="dropdown-item" asp-controller="Pagos" asp-action="Index"><i class="bi bi-currency-dollar me-2 text-success"></i>Pagos</a></li>
                                    <li><a class="dropdown-item" asp-controller="GananciasPrestamos" asp-action="Index"><i class="bi bi-graph-up-arrow me-2 text-warning"></i>Ganancias Por Prestamo</a></li>
                                    <li><a class="dropdown-item" asp-controller="Clientes" asp-action="Index"><i class="bi bi-people-fill me-2 text-secondary"></i>Clientes</a></li>
                                    <li><a class="dropdown-item" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-person-badge me-2 text-info"></i>Usuarios</a></li>
                                    <li><a class="dropdown-item" asp-controller="Cuotas" asp-action="Index"><i class="bi bi-calendar-check me-2 text-warning"></i>Cuotas</a></li>
                                    <li><a class="dropdown-item" asp-controller="Periodos" asp-action="Index"><i class="bi bi-calendar-range me-2 text-light"></i>Periodos</a></li>
                                    <li><a class="dropdown-item" asp-controller="Gastos" asp-action="Index"><i class="bi bi-receipt-cutoff me-2 text-danger"></i>Gastos</a></li>
                                    <li><a class="dropdown-item" asp-controller="Configuracion" asp-action="Index"><i class="bi bi-gear-wide-connected me-2 text-muted"></i>Configuración</a></li>
                                </ul>
                            </li>

                            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-cash-coin me-1"></i> Monetix
                            </a>

                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </ul>

                        @* Usuario en sesión *@
                        @if (!string.IsNullOrEmpty(usuario))
                        {
                            <div class="dropdown text-end">
                                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-2 fs-5"></i> <strong>@usuario</strong>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">Cerrar sesión</a></li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </nav>
        </header>
    }

    <div class="container py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @if (mostrarHeaderFooter)
    {
        <footer class="footer text-center">
            <div class="container">
                &copy; 2025 - <strong>MONETIX</strong> | Desarrollado por Jose Vergara |
                <a asp-controller="Home" asp-action="Privacy">Política de Privacidad</a>
            </div>
        </footer>
    }

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- Botón flotante de Inicio -->
    <a asp-controller="Home" asp-action="Index"
       class="btn btn-warning shadow-sm rounded-circle d-flex align-items-center justify-content-center"
       style="position: fixed; bottom: 85px; right: 20px; width: 58px; height: 58px; z-index: 1049;"
       title="Ir al inicio">
        <i class="bi bi-house-door-fill fs-4 text-dark"></i>
    </a>

</body>
</html>
