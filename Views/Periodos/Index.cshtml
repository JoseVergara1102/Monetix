@model List<Monetix.Models.Periodo>
@using System.Globalization
@{
    ViewData["Title"] = "Gestión de Periodos";
    var busqueda = ViewBag.Busqueda as string ?? "";
    int top = ViewBag.Top ?? 10;
    bool puedeReabrir = ViewBag.PuedeReabrir ?? false;
    bool todoCerrado = ViewBag.TodoCerrado ?? false;
    CultureInfo culture = new CultureInfo("es-CO");
    int contador = 1;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary fw-bold"><i class="bi bi-calendar-range-fill me-2"></i> Gestión de Periodos</h3>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row gy-2 gx-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Buscar por Periodo:</label>
                    <input type="text" name="busqueda" value="@busqueda" class="form-control" placeholder="Ej: 202507" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Top:</label>
                    <input type="number" name="top" value="@top" min="1" class="form-control" />
                </div>
                <div class="col-md-6 text-end">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a href="@Url.Action("Index", "Periodos")" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-clockwise"></i> Recargar
                    </a>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#crearModal">
                        <i class="bi bi-plus-circle"></i> Nuevo Periodo
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.MensajeError != null)
    {
        <div class="alert alert-danger shadow-sm"><i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.MensajeError</div>
    }
    @if (ViewBag.MensajeExito != null)
    {
        <div class="alert alert-success shadow-sm"><i class="bi bi-check-circle-fill me-2"></i>@ViewBag.MensajeExito</div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th> </th>
                    <th>Periodo</th>
                    <th>Inicio</th>
                    <th>Final</th>
                    <th>Inicial</th>
                    <th>Prestado</th>
                    <th>Estado</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@contador</td>
                        <td class="fw-semibold">@item.NombrePeriodo</td>
                        <td>@item.FechaInicio?.ToString("yyyy-MM-dd")</td>
                        <td>@item.FechaFinal?.ToString("yyyy-MM-dd")</td>
                        <td>@item.CantidadInicial?.ToString("C0", culture)</td>
                        <td>@item.CantidadPrestada?.ToString("C0", culture)</td>
                        <td>
                            @if (item.Estado == true)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary"><i class="bi bi-lock-fill"></i> Cerrado</span>
                            }
                        </td>
                        <td>
                            @if (item.Estado == true)
                            {
                                <form asp-action="Cerrar" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.IdPeriodo" />
                                    <button type="submit" class="btn btn-sm btn-danger" title="Cerrar" onclick="return confirm('¿Desea cerrar este periodo?')">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                </form>
                            }
                            else if (todoCerrado)
                            {
                                <form asp-action="Reabrir" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.IdPeriodo" />
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Reabrir" onclick="return confirm('¿Desea reabrir este periodo?')">
                                        <i class="bi bi-arrow-repeat"></i>
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                    contador++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Crear -->
<div class="modal fade" id="crearModal" tabindex="-1" aria-labelledby="crearModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow-lg border-0">
            <form asp-action="Create" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-calendar-plus me-2"></i> Crear Nuevo Periodo</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Cantidad Inicial</label>
                        <input type="number" name="cantidadInicial" required step="0.01" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Fecha Inicio</label>
                            <input type="date" name="fechaInicio" required class="form-control" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Fecha Final</label>
                            <input type="date" name="fechaFinal" required class="form-control" />
                        </div>
                    </div>
                    <input type="hidden" name="top" value="@top" />
                    <input type="hidden" name="busqueda" value="@busqueda" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Guardar Periodo
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            const abrirModal = '@(ViewBag.AbrirModal ?? "false")';
            if (abrirModal === "true") {
                new bootstrap.Modal(document.getElementById('crearModal')).show();
            }
        });
    </script>
}
