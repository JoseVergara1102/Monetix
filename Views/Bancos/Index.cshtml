@model List<Monetix.Models.Banco>
@{
    ViewData["Title"] = "Gestión de Bancos";
    var busqueda = ViewBag.Busqueda as string ?? "";
    int top = ViewBag.Top ?? 10;
    int contador = 1;
    var abrirModal = ViewBag.AbrirModal as string;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-primary fw-bold">
            <i class="bi bi-bank me-2"></i> Gestión de Bancos
        </h3>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form method="get" class="row gy-2 gx-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Buscar por nombre o código:</label>
                    <input type="text" name="busqueda" value="@busqueda" class="form-control" placeholder="Ej: Bancolombia, 001" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">Top:</label>
                    <input type="number" name="top" value="@top" min="1" class="form-control" />
                </div>
                <div class="col-md-6 text-end">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a href="@Url.Action("Index", "Bancos")" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-clockwise"></i> Recargar
                    </a>
                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#crearModal">
                        <i class="bi bi-plus-circle"></i> Nuevo Banco
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (ViewBag.MensajeError != null)
    {
        <div class="alert alert-danger shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.MensajeError
        </div>
    }
    @if (ViewBag.MensajeExito != null)
    {
        <div class="alert alert-success shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>@ViewBag.MensajeExito
        </div>
    }

    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th> </th>
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Cod. Inst. Financiera</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var b in Model)
                {
                    <tr>
                        <td>@contador</td>
                        <td>@b.Codigo</td>
                        <td class="fw-semibold">@b.Nombre</td>
                        <td>@b.CodInsFin</td>
                        <td>
                            @if (b.Estado == true)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary"><i class="bi bi-x-circle-fill"></i> Inactivo</span>
                            }
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                @if (b.Estado == true)
                                {
                                    <button type="button" class="btn btn-sm btn-outline-primary" title="Editar"
                                            onclick='editarBanco(@Html.Raw(Json.Serialize(b)))'>
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <form asp-action="Desactivar" method="post">
                                        <input type="hidden" name="id" value="@b.IdBanco" />
                                        <input type="hidden" name="top" value="@top" />
                                        <input type="hidden" name="busqueda" value="@busqueda" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Desactivar" onclick="return confirm('¿Desea desactivar este banco?')">
                                            <i class="bi bi-toggle-off"></i>
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Activar" method="post">
                                        <input type="hidden" name="id" value="@b.IdBanco" />
                                        <input type="hidden" name="top" value="@top" />
                                        <input type="hidden" name="busqueda" value="@busqueda" />
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Activar" onclick="return confirm('¿Desea activar este banco?')">
                                            <i class="bi bi-toggle-on"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                    contador++;
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Crear Banco -->
<div class="modal fade @(abrirModal == "true" ? "show d-block" : "")" id="crearModal" tabindex="-1" aria-labelledby="crearModalLabel" aria-hidden="true" style="@(abrirModal == "true" ? "display: block;" : "")">
    <div class="modal-dialog">
        <div class="modal-content shadow-lg border-0">
            <form asp-action="Create" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="bi bi-bank me-2"></i> Registrar Nuevo Banco</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Código</label>
                        <input type="text" name="Codigo" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" name="Nombre" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Código Institución Financiera</label>
                        <input type="text" name="CodInsFin" class="form-control" />
                    </div>
                    <input type="hidden" name="top" value="@top" />
                    <input type="hidden" name="busqueda" value="@busqueda" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Guardar Banco
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Editar Banco -->
<div class="modal fade" id="editarModal" tabindex="-1" aria-labelledby="editarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow-lg border-0">
            <form asp-action="Edit" method="post">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="bi bi-pencil-square me-2"></i> Editar Banco</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="IdBanco" id="edit-idBanco" />
                    <div class="mb-3">
                        <label class="form-label">Código</label>
                        <input type="text" name="Codigo" id="edit-codigo" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" name="Nombre" id="edit-nombre" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Código Institución Financiera</label>
                        <input type="text" name="CodInsFin" id="edit-codInsFin" class="form-control" />
                    </div>
                    <input type="hidden" name="top" value="@top" />
                    <input type="hidden" name="busqueda" value="@busqueda" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editarBanco(banco) {
            document.getElementById("edit-idBanco").value = banco.idBanco;
            document.getElementById("edit-codigo").value = banco.codigo;
            document.getElementById("edit-nombre").value = banco.nombre;
            document.getElementById("edit-codInsFin").value = banco.codInsFin;
            new bootstrap.Modal(document.getElementById("editarModal")).show();
        }

        $(function () {
            const abrirModal = '@(ViewBag.AbrirModal ?? "false")';
            if (abrirModal === "true") {
                new bootstrap.Modal(document.getElementById('crearModal')).show();
            }
        });
    </script>
}
