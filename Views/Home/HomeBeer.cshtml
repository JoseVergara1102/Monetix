@{
    ViewData["Title"] = "Panel Cervecería";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-dark">
            <i class="bi bi-cup-straw text-warning me-2"></i> Bienvenido a <span class="text-warning">MonetixBeer</span>
        </h1>
        <p class="text-muted fs-5">Panel de gestión de artículos y operaciones de bodega</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-sm-6 col-lg-4 col-xl-3">
            <div class="card shadow-sm border-0 h-100 hover-scale">
                <div class="card-body text-center py-4">
                    <i class="bi bi-boxes text-primary display-4 mb-3"></i>
                    <h5 class="fw-semibold">Artículos</h5>
                    <p class="text-muted small">Gestione su catálogo de productos cerveceros.</p>
                    <a href="@Url.Action("Index", "Articulos")" class="btn btn-sm btn-outline-primary">Ir al módulo</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4 col-xl-3">
            <div class="card shadow-sm border-0 h-100 hover-scale">
                <div class="card-body text-center py-4">
                    <i class="bi bi-people-fill text-success display-4 mb-3"></i>
                    <h5 class="fw-semibold">Clientes</h5>
                    <p class="text-muted small">Administre sus clientes y distribuidores.</p>
                    <a href="@Url.Action("ClientesBeer", "ClientesBeer")" class="btn btn-sm btn-outline-success">Ir al módulo</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4 col-xl-3">
            <div class="card shadow-sm border-0 h-100 hover-scale">
                <div class="card-body text-center py-4">
                    <i class="bi bi-box-arrow-in-down text-info display-4 mb-3"></i>
                    <h5 class="fw-semibold">Entradas</h5>
                    <p class="text-muted small">Registre el ingreso de productos al inventario.</p>
                    <a href="@Url.Action("Index", "Entradas")" class="btn btn-sm btn-outline-info">Ir al módulo</a>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-4 col-xl-3">
            <div class="card shadow-sm border-0 h-100 hover-scale">
                <div class="card-body text-center py-4">
                    <i class="bi bi-box-arrow-up text-danger display-4 mb-3"></i>
                    <h5 class="fw-semibold">Salidas</h5>
                    <p class="text-muted small">Controle las salidas de artículos por venta o distribución.</p>
                    <a href="@Url.Action("Index", "Salidas")" class="btn btn-sm btn-outline-danger">Ir al módulo</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-scale {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-scale:hover {
            transform: translateY(-5px) scale(1.03);
            box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, 0.1);
        }
</style>
